{
  "boot-source": {
    "kernel_image_path": "/guest/linux",
    "boot_args": "init=/bin/bash"
  },
  "machine-config": {
    "vcpu_count": 2,
    "mem_size_mib": 1024,
    "smt": true
  },
  "drives": [
    {
      "drive_id": "rootfs",
      "path_on_host": "/guest/rootfs",
      "is_root_device": true,
      "is_read_only": false,
      "cache_type": "Writeback",
      "io_engine": "Async"
    }
  ],
  "network-interfaces": [
    {
      "iface_id": "eth0",
      "guest_mac": "02:70:ee:fd:70:01",
      "host_dev_name": "guest"
    }
  ]
}
